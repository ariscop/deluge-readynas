#!/bin/sh
# postinst script for deluge
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
  configure)
    APPDIR=/apps/deluge
    DATADIR=/data/Deluge
    chown -R admin:admin $APPDIR
    # Preserve config directory unless there is new config file
    if [ ! -d $APPDIR/config ] ; then
        cp -r $APPDIR/default-config $APPDIR/config
    fi
    addgroup --system deluge #maybe non system group? for access control. does this work with kerberos?
    adduser --system --quiet --home $APPDIR --no-create-home --ingroup deluge deluge
    chown -R deluge:deluge $APPDIR/config
    chmod -R o-rwx $APPDIR/config
    a2enmod proxy_http
    #create share last
    if [ ! -d $DATADIR ] ; then
        rn_nml -a share:$DATADIR
        setfacl -d -m u:deluge:rwX $DATADIR
        setfacl -d -m g:deluge:rwX $DATADIR
        mkdir $DATADIR/Downloads
        mkdir $DATADIR/Incomplete
    fi
    # Restart apache so that all site-enables will be updated
    if systemctl restart apache2.service; then
      # success
      event_push app readynasd '<add-s resource-type="LocalApp" resource-id="LocalApp"><LocalApp appname="deluge" success="1"/></add-s>' 0 0
    else
      # error
      event_push app readynasd '<add-s resource-type="LocalApp" resource-id="LocalApp"><LocalApp appname="deluge" success="0"/></add-s>' 0 0
    fi
    ;;

  abort-upgrade|abort-remove|abort-deconfigure)
    ;;

  *)
    echo "postinst called with unknown argument \`$1'" >&2
    exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
